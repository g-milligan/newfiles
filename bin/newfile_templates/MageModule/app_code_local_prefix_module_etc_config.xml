<<filename:l:app/code/local/[prefix]/[Module]/etc:"config">>
<<var:n:module prefix => [prefix]>>
<<var:c:module name => [Module]>>
<<var:l:module name => [module]>>

<?xml version="1.0"?>
<config>
	<modules>
		<[prefix]_[Module]>
			<version><<var:n:extension version>></version>
		</[prefix]_[Module]>
	</modules>
	<global>
		<models>
			<[module]>
				<class>[prefix]_[Module]_Model</class>
			</[module]>
		</models>
		<blocks>
			<[module]>
				<class>[prefix]_[Module]_Block</class>
			</[module]>
		</blocks>
		<helpers>
			<[module]>
				<class>[prefix]_[Module]_Helper</class>
			</[module]>
		</helpers>
	</global>
	<frontend>
		<layout>
			<updates>
				<[module]>
					<file>mg_[module].xml</file>
				</[module]>
			</updates>
		</layout>
		<translate>
			<modules>
				<[prefix]_[Module]>
					<files>
						<default>[prefix]_[Module].csv</default>
					</files>
				</[prefix]_[Module]>
			</modules>
		</translate>
	</frontend>
</config>